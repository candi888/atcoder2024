{
    "editor.tokenColorCustomizations": {
        "comments": {
            "foreground": "#ffffff",
            "fontStyle": "italic",
        },
        "functions": "#559ef7",
        "numbers": "#e2e2e2",
        "types": "#9f5097",
        "variables": "#8ddbf5fd",
    },
    "editor.fontLigatures": true,
    "editor.cursorStyle": "block",
    "editor.snippetSuggestions": "top",
    "editor.fontFamily": "'Fira Code',Consolas, 'Courier New', monospace",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.suggest.showKeywords": false,
    "editor.formatOnSave": true, // ファイル保存時に自動フォーマット
    // 日本語文書で単語移動を使うため、助詞や読点、括弧を区切り文字として指定する
    "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?　、。「」【】『』（）！？てにをはがのともへでや",
    "editor.fastScrollSensitivity": 1,
    "terminal.integrated.defaultProfile.osx": "bash",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "editor.suggest.showWords": false, // textもいらないので消す
    "python.createEnvironment.trigger": "off",
    "ruff.lint.args": [
        "--ignore",
        "F401"
    ],
    "mypy-type-checker.args": [
        "--disallow-untyped-defs",
        "--ignore-missing-imports"
    ],
    "mypy-type-checker.cwd": "${fileDirname}",
    "mypy-type-checker.severity": {
        "error": "Warning"
    },
    "files.autoSave": "onFocusChange",
    "workbench.list.fastScrollSensitivity": 2,
    "terminal.integrated.fastScrollSensitivity": 2,
    "editor.mouseWheelScrollSensitivity": 1,
    "git.openRepositoryInParentFolders": "always",
    "workbench.iconTheme": "vscode-icons",
    "vsicons.dontShowNewVersionMessage": true,
    "editor.renderControlCharacters": true,
    "editor.formatOnType": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ -std=c++14 -Wshadow -Wall -Wno-sign-compare -D_GLIBCXX_DEBUG -g -I . $fileName && ./a.out",
        "rust": "cargo run",
    },
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "terminal.integrated.confirmOnKill": "panel",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "jupyter.askForKernelRestart": false,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff", // Prettier を使わないようにする
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit" // 保存時にimportを整理
        },
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
        // "editor.inlayHints.enabled": "offUnlessPressed"
    },
}